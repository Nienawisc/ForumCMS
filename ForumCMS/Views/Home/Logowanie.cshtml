<link rel="stylesheet" href="~/Content/Logowanie.css">
<div class="login-page">
    <div class="form">
        <form class="register-form" method="post" action="@Url.Action("Rejestracja")">
            <input type="text" placeholder="login" name="login" />
            <input type="password" placeholder="password" name="pass" />
            <input type="password" placeholder="Repeat password" name="pass2" />
            <input type="text" placeholder="email" name="email" />
            <button>create</button>
            <p class="message">Already registered? <a href="#">Sign In</a></p>
        </form>
        <form class="login-form" method="post" action="@Url.Action("Login")">
            <input type="text" name="login" placeholder="username" />
            <input type="password" name="haslo" placeholder="password" />
                <span>Remember me </span><input name="autologin" style="width:20px;" type="checkbox" />
            <button>login</button>
            <p class="message">Not registered? <a href="#">Create an account</a></p>
        </form>
    </div>
</div>

<script>
    $('.message a').click(function () {
        $('form').animate({ height: "toggle", opacity: "toggle" }, "slow");
    });
</script>